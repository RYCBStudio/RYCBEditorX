<UserControl
    x:Class="RYCBEditorX.Views.Wiki"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:RYCBEditorX.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
    xmlns:mdx="clr-namespace:RYCBEditorX.Utils;assembly=RYCBEditorX.Utils"
    xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    d:DesignHeight="1000"
    d:DesignWidth="300"
    FontFamily="{DynamicResource Main}"
    Loaded="Init"
    mc:Ignorable="d">
    <UserControl.Resources>
        <FontFamily x:Key="Iconfont">/RYCBEditorX;component/Assets/Fonts/#ali-ifont</FontFamily>
        <FontFamily x:Key="Jbm">/RYCBEditorX;component/Assets/Fonts/#Jetbrains Mono</FontFamily>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock x:Name="ThemePlaceHolder" Visibility="Hidden" />
        <Button
            x:Name="LoadBtn"
            Click="Button_Click"
            IsEnabled="False">
            Load
        </Button>
        <hc:ScrollViewer x:Name="Main" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="9*" />
                </Grid.RowDefinitions>
                <hc:FlexPanel HorizontalAlignment="Center">
                    <TextBlock
                        x:Name="HeaderIcon"
                        FontFamily="{StaticResource Iconfont}"
                        FontSize="30"
                        Style="{StaticResource TextBlockBaseStyle}"
                        Text="&#xe629;" />
                    <TextBox
                        x:Name="Header"
                        Margin="5,0,0,0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontFamily="{StaticResource Jbm}"
                        FontSize="25"
                        FontWeight="Bold"
                        IsReadOnly="True"
                        Style="{StaticResource TextBoxBaseStyle}"
                        TextChanged="Header_TextChanged" />
                </hc:FlexPanel>
                <hc:Divider
                    Grid.Row="1"
                    Margin="0,10,0,0"
                    LineStroke="#FF5D5D5D"
                    LineStrokeThickness="2.5" />
                <hc:SimpleStackPanel Grid.Row="3">
                    <hc:FlexPanel HorizontalAlignment="Center">
                        <TextBlock
                            FontFamily="{StaticResource Iconfont}"
                            FontSize="25"
                            Style="{StaticResource TextBlockBaseStyle}"
                            Text="&#xe60c;" />
                        <TextBlock
                            Margin="5,0,0,0"
                            FontSize="18"
                            Style="{StaticResource TextBlockBoldBaseStyle}"
                            Text="Comments" />
                    </hc:FlexPanel>
                    <ListBox x:Name="CommentsListBox">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource TextBlockBoldBaseStyle}"
                                        Text="{Binding User}" />
                                    <TextBox
                                        Grid.Row="1"
                                        HorizontalAlignment="Right"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        Foreground="Gray"
                                        IsReadOnly="True"
                                        Text="{Binding Uid}" />
                                    <mdx:MarkdownViewer
                                        Grid.Row="2"
                                        Foreground="{StaticResource PrimaryTextBrush}"
                                        Markdown="{Binding CommentText}"
                                        Theme="{Binding Text, ElementName=ThemePlaceHolder}">
                                        <mdx:MarkdownViewer.Resources>
                                            <Style TargetType="FlowDocumentScrollViewer">
                                                <Setter Property="IsToolBarVisible" Value="False" />
                                            </Style>
                                        </mdx:MarkdownViewer.Resources>
                                    </mdx:MarkdownViewer>
                                    <hc:FlexPanel
                                        Grid.Row="3"
                                        HorizontalAlignment="Right"
                                        Background="Transparent">
                                        <Label Content="{Binding Time}" />
                                        <ToggleButton
                                            Checked="CheckedLikes"
                                            Content="&#xe62a;"
                                            FontFamily="{StaticResource Iconfont}"
                                            Style="{StaticResource ToggleButtonDefault}"
                                            Tag="{Binding}" />
                                        <Label Content="{Binding Likes}" />
                                        <Button
                                            Click="DeleteComment"
                                            Content="&#xe628;"
                                            FontFamily="{StaticResource Iconfont}"
                                            Style="{StaticResource ButtonBaseStyle}"
                                            Tag="{Binding}" />
                                    </hc:FlexPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <TextBox
                        x:Name="NewCommentBox"
                        Width="300"
                        Height="100"
                        MaxHeight="300"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Top"
                        hc:InfoElement.Placeholder="{DynamicResource Wiki.Comment.Watermark}"
                        AcceptsReturn="True"
                        KeyDown="NewCommentBox_KeyDown"
                        TextChanged="NewCommentBox_TextChanged"
                        TextWrapping="Wrap" />
                    <TextBox
                        x:Name="NewCommentUser"
                        Width="300"
                        Height="15"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        hc:InfoElement.Placeholder="{DynamicResource Wiki.Comment.Watermark}"
                        KeyDown="NewCommentBox_KeyDown" />
                    <hc:SimplePanel>
                        <Button
                            x:Name="SendComment"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="SendComment_Click"
                            Content="&#xea9e;"
                            FontFamily="{StaticResource Iconfont}"
                            FontSize="20"
                            IsEnabled="False" />
                    </hc:SimplePanel>
                </hc:SimpleStackPanel>
                <hc:LoadingCircle
                    x:Name="Loading"
                    Grid.RowSpan="11"
                    Width="150"
                    Height="150"
                    DotCount="5"
                    DotDiameter="12.5"
                    Visibility="Visible" />
            </Grid>
        </hc:ScrollViewer>
    </Grid>
</UserControl>
